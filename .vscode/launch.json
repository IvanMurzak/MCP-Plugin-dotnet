{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Demo Web App (http) 59479",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DemoWebApp/bin/Debug/net9.0/DemoWebApp.dll",
            "args": [
                "port=59479",
                "client-transport=http"
            ],
            "cwd": "${workspaceFolder}/DemoWebApp",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Demo Web App (http)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DemoWebApp/bin/Debug/net9.0/DemoWebApp.dll",
            "args": [
                "port=11111",
                "client-transport=http"
            ],
            "cwd": "${workspaceFolder}/DemoWebApp",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Demo Web App (stdio)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DemoWebApp/bin/Debug/net9.0/DemoWebApp.dll",
            "args": [
                "port=11111",
                "client-transport=stdio"
            ],
            "cwd": "${workspaceFolder}/DemoWebApp",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Demo App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DemoConsoleApp/bin/Debug/net9.0/DemoConsoleApp.dll",
            "args": [
                "mcp-server-endpoint=http://localhost:11111",
                "mcp-server-timeout=5000"
            ],
            "cwd": "${workspaceFolder}/DemoConsoleApp",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ],
    "compounds": [
        {
            "name": "Web + App (http)",
            "configurations": [
                "Launch Demo Web App (http)",
                "Launch Demo App"
            ],
            "stopAll": true,
            "preLaunchTask": "build"
        },
        {
            "name": "Web + App (stdio)",
            "configurations": [
                "Launch Demo Web App (stdio)",
                "Launch Demo App"
            ],
            "stopAll": true,
            "preLaunchTask": "build"
        }
    ]
}